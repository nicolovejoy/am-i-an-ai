{
  "name": "amianai-v2-lambda",
  "version": "1.0.0",
  "description": "WebSocket Lambda for 2H+2AI conversations",
  "main": "handler.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "package": "npm run build && zip -r ../infrastructure/websocket-function.zip . -x '*.ts' 'tsconfig.json' 'node_modules/.cache/*'"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.445.0",
    "@aws-sdk/client-apigatewaymanagementapi": "^3.445.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/aws-lambda": "^8.10.119",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.0",
    "aws-sdk": "^2.1691.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": ["**/*.test.(ts|js)"],
    "collectCoverageFrom": ["**/*.(ts|js)", "!**/*.test.(ts|js)", "!**/node_modules/**"]
  }
}